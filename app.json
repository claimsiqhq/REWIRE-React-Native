{
  "expo": {
    "name": "REWIRE",
    "slug": "rewire",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "scheme": "rewire",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0D1F17"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.rewire.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "REWIRE needs microphone access for voice coaching sessions.",
        "UIBackgroundModes": ["audio"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0D1F17"
      },
      "package": "com.rewire.app",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.VIBRATE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-av",
        {
          "microphonePermission": "Allow REWIRE to access your microphone for voice coaching."
        }
      ],
      "expo-haptics"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
